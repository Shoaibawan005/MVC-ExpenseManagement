@{
    ViewData["Title"] = "Expenses";
}

@model List<Expenses>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />

    <table class="table">

        <thead>

            <tr>
                <th>
                    Id
                </th>

                <th>
                    Value
                </th>

                <th>
                    Description
                </th>

                <td>
                    Actions
                </td>
            </tr>

        </thead>

        <tbody>

            @{
                foreach(var expense in Model)
                {
                    <tr>
                        <td>
                            @expense.Id
                        </td>

                        <td>
                            @expense.Value
                        </td>

                        <td>
                            @expense.Description
                        </td>

                        <td>
                            <a asp-action="CreateEditExpense">Edit</a>
                            <a asp-action="">Delete</a>

                        </td>
                    </tr>
                }
            }

        </tbody>

    </table>
</div>
