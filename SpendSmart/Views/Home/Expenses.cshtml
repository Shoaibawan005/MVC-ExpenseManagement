@{
    ViewData["Title"] = "Expenses";
}

@model List<Expenses>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Expenses Overview</h2>
            <p class="text-muted mb-0">Track, manage, and edit your spending efficiently.</p>
        </div>
        <a asp-controller="Home" asp-action="CreateEditExpense" class="btn btn-outline-primary d-flex align-items-center gap-2 px-3 py-2 shadow-sm">
            <i class="bi bi-plus-lg"></i> Add Expense
        </a>
    </div>

    <div class="alert alert-info text-center">
        <strong>Total Expenses:</strong> $@ViewBag.Expenses
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Value ($)</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model)
                    {
                        <tr>
                            <td>@expense.Id</td>
                            <td class="text-success fw-semibold">$@expense.Value</td>
                            <td>@expense.Description</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a class="btn btn-sm btn-outline-success" asp-action="CreateEditExpense" asp-route-id="@expense.Id">
                                        <i class="bi bi-pencil-fill"></i> 
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="DeleteExpense" asp-route-id="@expense.Id">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
