@{
    ViewData["Title"] = "Create / Edit";
}

@model SpendSmart.Models.Expenses

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow-lg border-0" style="border-radius: 20px;">
        <div class="card-body p-5">
            <h2 class="text-center mb-4 fw-bold">💸 Manage Expense</h2>

            <form asp-controller="Home" asp-action="CreateEditExpenseForm">

                <!-- Hidden ID -->
                <input hidden type="number" class="form-control" asp-for="Id" />

                <!-- Value Field -->
                <div class="mb-4">
                    <label class="form-label fw-semibold"><i class="bi bi-currency-dollar"></i> Value</label>
                    <input type="number" class="form-control form-control-lg" asp-for="Value" step="0.01" placeholder="Enter amount" />
                </div>

                <!-- Description Field -->
                <div class="mb-4">
                    <label class="form-label fw-semibold"><i class="bi bi-pencil-square"></i> Description</label>
                    <input type="text" class="form-control form-control-lg" asp-for="Description" placeholder="e.g. Grocery, Rent, Travel..." />
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle-fill"></i> Save Expense
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
